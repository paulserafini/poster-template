% Wrap text in a box
\newcommand{\attention}[1] {
  \setlength{\fboxrule}{5pt} % thicker lines
  \vspace{1em}
  \centering
  \fbox{
    \parbox{0.75\textwidth}{ \centering #1 }
  }
}

